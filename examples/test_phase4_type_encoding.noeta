# Test Phase 4D-F: Type, Encoding, Scaling Operations
load csv "data/sales_data.csv" as sales

# Test ASTYPE
astype sales column quantity dtype="str" as str_quantity

# Test TO_NUMERIC
to_numeric str_quantity column quantity errors="coerce" as num_quantity

# Test ONE_HOT_ENCODE
one_hot_encode sales column category as encoded

# Test LABEL_ENCODE
label_encode sales column category as labeled

# Test STANDARD_SCALE
standard_scale sales column price as scaled_std

# Test MINMAX_SCALE
minmax_scale sales column price as scaled_minmax

describe scaled_std
