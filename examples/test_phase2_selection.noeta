# Phase 2 Test: Selection & Projection Operations
# Tests all new selection and projection operations

# Load test data
load csv "data/sales_data.csv" as sales

# Test 1: SELECT_BY_TYPE - Select numeric columns only
select_by_type sales with type="numeric" as numeric_cols

# Test 2: HEAD - Get first 5 rows (default)
head sales with n=5 as first_five

# Test 3: TAIL - Get last 3 rows
tail sales with n=3 as last_three

# Test 4: ILOC - Position-based row selection
iloc sales with rows=[0,10] as first_ten_iloc

# Test 5: RENAME - Rename columns
rename sales with mapping={"price": "unit_price", "quantity": "qty"} as sales_renamed

# Test 6: REORDER - Reorder columns
reorder sales with order=["date", "product_id", "price", "quantity"] as sales_reordered

# Test 7: Show info about one of the results
info first_five
